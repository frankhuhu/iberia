<div class="page-container">

<!--
  <%= render "shared/page_header" %>
-->

  <div class="header ">
    <div class="pull-left sm-table">
      <div class="header-inner">
        <div class="brand inline">
          <%= image_tag("logo.png", height: '22', width: '98') %>
        </div>
      </div>
    </div>
    <div class="pull-right sm-table">
      <div class="header-inner">
        <input id="inventory_in_query_date" value="Filter by Date" class="btn btn-success">
        <%= link_to "New Inventory In", new_inventory_in_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>

  <div class="page-content-wrapper">
    <div class="content">
      <div class="container-fluid container-fixed-lg">
        <div class="panel panel-transparent">
          <div class="panel-heading">
            <div class="panel-title">Inventory In (<%= @query_date.strftime("%B %Y")  %>)</div>
          </div>
          <div class="panel-body">
            <table class="table table-hover" id="tableWithDynamicRows">
              <thead>
                <tr>
                  <th></th>
                  <th>INVOICE</th>
                  <th>VENDOR</th>
                  <th>IN DATE</th>
                  <th>PAID DATE</th>
                  <th>CONTENT</th>
                  <th>PO</th>
                  <th>TRUCK</th>
                </tr>
              </thead>
              <tbody>
                <% @inventory_ins.each do |inv| %>
                  <tr>
                    <td>
                      <%= link_to inventory_in_path(inv), method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                      <%= link_to inventory_in_path(inv) do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                    </td>
                    <td><%= link_to inv.invoice, inventory_in_path(inv) %></td>
                    <td><%= inv.vendor %></td>
                    <td><%= inv.in_date %></td>
                    <td><%= inv.paid_date %></td>
                    <td><%= inv.content %></td>
                    <td><%= inv.po %></td>
                    <td><%= inv.truck %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
