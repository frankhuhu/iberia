<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Customer Information</p>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group form-group-default required">
        <label>Customer ID</label>
        <%= f.text_field :customer_id, class: 'form-control', :required => true, :readonly=>(@type=='show') %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group form-group-default">
        <label>Contact</label>
        <%= f.text_field :contact, class: 'form-control', :readonly=>(@type=='show') %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group form-group-default">
        <label>Company</label>
        <%= f.text_field :company, class: 'form-control', :readonly=>(@type=='show') %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="form-group form-group-default">
        <label>Phone</label>
        <%= f.text_field :phone, class: 'form-control', :readonly=>(@type=='show') %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group form-group-default">
        <label>Fax</label>
        <%= f.text_field :fax, class: 'form-control', :readonly=>(@type=='show') %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group form-group-default">
        <label>Email</label>
        <%= f.text_field :email, class: 'form-control', :readonly=>(@type=='show') %>
      </div>
    </div>
  </div>


  <div class="form-group form-group-default">
    <label>Bill to Address</label>
    <%= f.text_field :bill_address, class: 'form-control', :readonly=>(@type=='show') %>
  </div>

  <div class="form-group form-group-default">
    <label>Method</label>
    <%= f.email_field :method, class: 'form-control', :readonly=>(@type=='show') %>
  </div>

  <br>
  <br>
  <% if @type == 'show' %>
    <%= link_to 'Edit', edit_customer_path, class: "btn btn-success" %>
  <% else %>
    <%= f.submit class: "btn btn-success", value: "Submit" %>
  <% end %>
  <%= link_to 'Back', customers_path, class: "btn btn-default" %><br>
<% end %>
