<div class="page-container">

<!--
  <%= render "shared/page_header" %>
-->

  <div class="header ">
    <div class="pull-left sm-table">
      <div class="header-inner">
        <div class="brand inline">
          <%= image_tag("logo.png", height: '22', width: '98') %>
        </div>
      </div>
    </div>
    <div class="pull-right sm-table">
      <div class="header-inner">
        <%= link_to "New Customer", new_customer_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>

  <div class="page-content-wrapper">
    <div class="content">
      <div class="container-fluid container-fixed-lg">
        <div class="panel panel-transparent">
          <div class="panel-heading">
            <div class="panel-title">Customers</div>
          </div>
          <div class="panel-body">
            <table class="table table-hover" id="tableWithDynamicRows">
              <thead>
                <tr>
                  <th></th>
                  <th>CONTACT</th>
                  <th>CUSTOMER ID</th>
                  <th>PHONE</th>
                  <th>EMAIL</th>
                  <th>COMPANY</th>
                </tr>
              </thead>
              <tbody>
                <% @customers.each do |customer| %>
                  <tr>
                    <td>
                      <%= link_to customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                      <%= link_to customer_path(customer) do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                    </td>
                    <td><%= link_to customer.contact, customer_path(customer) %></td>
                    <td><%= customer.customer_id %></td>
                    <td><%= customer.phone %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.company %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
